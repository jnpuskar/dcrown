    "version": "0.2.0",
    "configurations": [        
        { 
            "name": "(gdb) Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "dummy", // default program overridden below
            "windows": {
                "program": "${workspaceRoot}/build/debug/bin/dcrownd.exe",
                "miDebuggerPath": "C:/msys64/mingw64/bin/gdb.exe"             
            },
            "linux": {
                "program": "${workspaceRoot}/build/debug/bin/dcrownd",
                "miDebuggerPath": "/usr/bin/gdb"             
            },
                  
            "args":["--add-exclusive-node 192.168.88.235"],
            "stopAtEntry": true,
            "cwd": "${workspaceRoot}/build/debug/bin",
            "environment": [],
            "externalConsole": true,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}